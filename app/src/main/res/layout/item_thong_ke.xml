<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_thong_ke_gui1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"/>

    <TextView
        android:id="@+id/item_thong_ke_tv_ten"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/biryani_semibold"
        android:text="Xe Bus"
        android:textSize="19sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/item_thong_ke_gui1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/item_thong_ke_tv_gia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/item_thong_ke_gui1"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="19sp"
        android:fontFamily="@font/biryani_semibold"
        android:textColor="@color/black"
        android:text="1900"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>