<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="20dp"
    android:elevation="20dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/item_loai_thu_chi_gui1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            cardview:layout_constraintGuide_percent="0.02"
            android:orientation="vertical" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/item_loai_thu_chi_gui2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            cardview:layout_constraintGuide_percent="0.85"
            android:orientation="vertical" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/item_loai_thu_chi_gui3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            cardview:layout_constraintGuide_percent="0.97"
            android:orientation="vertical" />
        <TextView
            android:id="@+id/item_loai_thu_chi_tv_STT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            cardview:layout_constraintTop_toTopOf="parent"
            cardview:layout_constraintStart_toEndOf="@id/item_loai_thu_chi_gui1"
            android:text="1"
            android:fontFamily="@font/biryani_semibold"
            android:textColor="@color/purple_700"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/item_loai_thu_chi_tv_tenLoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/biryani_semibold"
            android:text="Tiền xe bus"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            cardview:layout_constraintStart_toEndOf="@id/item_loai_thu_chi_gui1"
            cardview:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/item_loai_thu_chi_tv1"
            android:fontFamily="@font/biryani_semibold"
            android:textColor="@color/purple_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã: "
            android:textSize="18sp"
            cardview:layout_constraintStart_toEndOf="@id/item_loai_thu_chi_gui1"
            cardview:layout_constraintTop_toBottomOf="@id/item_loai_thu_chi_tv_STT"/>
        <TextView
            android:id="@+id/item_loai_thu_chi_tv_maThuChi"
            android:fontFamily="@font/biryani_semibold"
            android:textColor="@color/purple_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PH1"
            cardview:layout_constraintStart_toEndOf="@id/item_loai_thu_chi_tv1"
            cardview:layout_constraintTop_toBottomOf="@id/item_loai_thu_chi_tv_tenLoai"
            android:textSize="18sp"/>
        <ImageButton
            android:id="@+id/item_loai_thu_chi_imgBtn_edit"
            android:background="@null"
            android:src="@drawable/edit_35"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            cardview:layout_constraintTop_toTopOf="parent"
            cardview:layout_constraintStart_toEndOf="@id/item_loai_thu_chi_gui2"
            cardview:layout_constraintEnd_toStartOf="@id/item_loai_thu_chi_gui3"
            />
        <ImageButton
            android:id="@+id/item_loai_thu_chi_imgBtn_remove"
            android:background="@null"
            android:src="@drawable/remove_35"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            cardview:layout_constraintTop_toBottomOf="@id/item_loai_thu_chi_imgBtn_edit"
            cardview:layout_constraintStart_toEndOf="@id/item_loai_thu_chi_gui2"
            cardview:layout_constraintEnd_toStartOf="@id/item_loai_thu_chi_gui3"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>